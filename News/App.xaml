<?xml version="1.0" encoding="utf-8"?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="News.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BarBg">#373737</Color>
            <Color x:Key="BarText">#ffffff</Color>
            <Color x:Key="TitleTextColor">#333</Color>

            <Style x:Key="viewPage" TargetType="StackLayout">
                <Setter Property="BackgroundColor" Value="#c2c2c2"/>
                <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>

            <Style x:Key="listLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource TitleTextColor}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="FontSize" Value="14" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>